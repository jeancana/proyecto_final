{{#if user}}
<header class="p-3 mb-3 border-bottom">
    <div class="container">
        <div class="d-flex flex-wrap align-items-center justify-content-center justify-content-md-between">
            <a href="/products" class="d-flex align-items-center mb-2 mb-lg-0 link-body-emphasis text-decoration-none">
                <img src="/static/img/logo.png" height="32" width="32" />
            </a>

            <ul class="nav col-12 col-md-auto mb-2 justify-content-center mb-md-0">
                <li><a href="/products" class="nav-link px-2 link-secondary">Products</a></li>
                <li><a href="/cart" class="nav-link px-2 link-body-emphasis">Cart</a></li>
                <li><a href="/tickets" class="nav-link px-2 link-body-emphasis">Tickets</a></li>
            </ul>

            <div class="dropdown text-end">
                <a href="#" class="d-block link-body-emphasis text-decoration-none dropdown-toggle"
                    data-bs-toggle="dropdown" aria-expanded="false">
                    {{#if user.thumbnail}}
                    <img src="{{user.thumbnail}}" alt="mdo" width="32" height="32" class="rounded-circle">
                    {{else}}
                    <span>{{user.email}}</span>
                    {{/if}}
                </a>
                <ul class="dropdown-menu text-small">
                    {{!-- {{#if eq user.role "admin" }}
                    <li>Manage Products</li>
                    {{/if}} --}}
                    <li><a class="dropdown-item" href="/logout">Sign out</a></li>
                </ul>
            </div>
        </div>
    </div>
</header>
{{/if}}