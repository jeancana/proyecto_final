{{> header user=user}}

<div class="product-detail-page container">

   <div class="justify-content-center align-items-center">

        <form action="/{{route}}/add/{{product.pid}}" method="post">

            <div class="container justify-content-center align-items-center" style="max-width: 400px;">
                <img src="{{product.thumbnail}}" width="120" height="120"/>

                <div class="mb-3 row">
                    <label for="name" class="col-sm-4 col-form-label">Name</label>
                    <div class="col-sm-8">
                        <input type="text" readonly class="form-control-plaintext" id="name" value="{{product.title}}">
                    </div>
                </div>

                <div class="mb-3 row">
                    <label for="category" class="col-sm-4 col-form-label">Category</label>
                    <div class="col-sm-8">
                        <input type="text" readonly class="form-control-plaintext" id="category" value="{{product.category}}">
                    </div>
                </div>

                <div class="mb-3 row">
                    <label for="price" class="col-sm-4 col-form-label">Price</label>
                    <div class="col-sm-8">
                        <input type="text" readonly class="form-control-plaintext" id="price" value="${{product.price}}">
                    </div>
                </div>

                <div class="mb-3 row">
                    
                    <label for="cantidad" class="col-sm-4 col-form-label">Quantity</label>

                    <div class="col-sm-8">
                        
                        {{!-- <input type="number" class="form-control" id="cantidad"> --}}
                        <input type="number" class="form-control" id="cantidad" name="cantidad" required>

                    </div>
                </div>

                <input type="submit" class="btn btn-primary justify-center" value="Add to Cart">
            </div>

        </form>
    </div>
</div>